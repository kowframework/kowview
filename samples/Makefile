# Makefile for the AW_Config
#
# @author Marcelo Cora√ßa de Freitas <marcelo@kow.com.br>



PROJECT=awview-samples

TCP=$(PWD)/data	

################
# Main targets #
################
all: libs

libs:
	gnatmake -P ${PROJECT}.gpr

clean: 
	gnatclean -P ${PROJECT}.gpr
	@echo "All clean"

docs:
	@-./gendoc.sh
	@echo "The documentation is generated by a bash script. Then it might fail in other platforms than Linux"

run:
	WEB_SERVER_CONFIG_PATH=${TCP} ./bin/web_server

install:
	@cat INSTALL
