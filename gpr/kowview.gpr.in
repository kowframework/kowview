with "kowconfig";
with "kowconfig-text";
with "kowlib";
with "kowsec";

with "aws";

project KOWView is

	version := KOWLib.Version;
	prefix	:= $prefix;
	
	for Source_Dirs use ( prefix & "/include/kowview" );
	
	-- LIBRARY
	for Library_Dir use prefix & "/lib";
	for Library_Name use "kowview";
	for Library_Kind use KOWLib'Library_Kind;
	for Library_Version use "libkowview.so." & Version;
	for Externally_Built use "true";
	
	
	package Compiler is
		for Default_Switches ("ada") use ("-O2", "-gnat05");
	end Compiler;

	package Linker renames KOWLib.Linker;

end KOWView;

